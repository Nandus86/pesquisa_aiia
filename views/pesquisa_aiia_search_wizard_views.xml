<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pesquisa_aiia_search_wizard_form" model="ir.ui.view">
        <field name="name">pesquisa.aiia.search.wizard.form</field>
        <field name="model">pesquisa_aiia.search.wizard</field>
        <field name="arch" type="xml">
            <form string="Iniciar Nova Pesquisa AIIA">
                <group>
                    <field name="search_query" widget="text" placeholder="Ex: Empresas de TI em SÃ£o Paulo"/>
                </group>
                <footer>
                    <button name="action_trigger_search" string="Iniciar Pesquisa" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pesquisa_aiia_search_wizard" model="ir.actions.act_window">
        <field name="name">Iniciar Nova Pesquisa AIIA</field>
        <field name="res_model">pesquisa_aiia.search.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> <!-- Abre como pop-up -->
    </record>

</odoo>