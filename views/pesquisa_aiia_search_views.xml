<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View Tree para Pesquisas -->
    <record id="view_pesquisa_aiia_search_tree" model="ir.ui.view">
        <field name="name">pesquisa.aiia.search.tree</field>
        <field name="model">pesquisa_aiia.search</field>
        <field name="arch" type="xml">
            <tree string="Pesquisas AIIA" default_order="create_date desc">
                <field name="name" string="Termo Pesquisado"/>
                <field name="user_id"/>
                <field name="create_date"/>
                <field name="status"/>
                <field name="lead_count" string="Leads"/>
                <field name="next_page_token" optional="hide"/>
                 <!-- Botão para ver resultados diretamente da lista -->
                 <button name="action_view_results" type="object" string="Ver Leads" icon="fa-list"/>
                 <!-- *** CORREÇÃO ODOO 17: Usa column_invisible *** -->
                 <button name="action_search_next_page" type="object" string="Próxima Página" icon="fa-arrow-right"
                         column_invisible="[('next_page_token', '=', False)]"/>
            </tree>
        </field>
    </record>

    <!-- View Form para Pesquisas -->
    <record id="view_pesquisa_aiia_search_form" model="ir.ui.view">
        <field name="name">pesquisa.aiia.search.form</field>
        <field name="model">pesquisa_aiia.search</field>
        <field name="arch" type="xml">
            <form string="Detalhes da Pesquisa AIIA">
                 <header>
                      <!-- *** CORREÇÃO ODOO 17: Usa invisible *** -->
                      <button name="action_search_next_page" type="object" string="Pesquisar Próxima Página" class="btn-primary"
                              invisible="[('next_page_token', '=', False)]"/>
                      <field name="status" widget="statusbar" statusbar_visible="new,processing,pending_next,completed,error"/>
                 </header>
                <sheet>
                     <div class="oe_button_box" name="button_box">
                          <button name="action_view_results" type="object" class="oe_stat_button" icon="fa-list-ul">
                               <field name="lead_count" widget="statinfo" string="Leads Encontrados"/>
                          </button>
                     </div>
                     <group>
                          <group>
                               <field name="search_query" readonly="1"/>
                               <field name="user_id" readonly="1"/>
                               <field name="create_date" readonly="1"/>
                          </group>
                          <group>
                               <field name="next_page_token" readonly="1"/>
                               <!-- *** CORREÇÃO ODOO 17: Usa invisible *** -->
                               <field name="error_message" readonly="1" invisible="[('status', '!=', 'error')]"/>
                          </group>
                     </group>
                     <notebook>
                          <page string="Leads Encontrados">
                               <!-- Mostra a lista de leads diretamente no formulário -->
                               <field name="lead_ids" readonly="1">
                                    <tree>
                                         <field name="name"/>
                                         <field name="phone"/>
                                         <field name="email"/>
                                         <field name="create_date" optional="hide"/>
                                         <!-- Se precisar dos botões de ação dos leads aqui, copie-os da view_pesquisa_aiia_lead_tree -->
                                    </tree>
                               </field>
                          </page>
                     </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Ação de Janela Principal para Pesquisas -->
    <record id="action_pesquisa_aiia_search_main" model="ir.actions.client">
        <field name="name">Pesquisa AIIA</field> <!-- Nome ajustado -->
        <!-- Tag que corresponde ao registro no JS -->
        <field name="tag">pesquisa_aiia.action_client_search</field>
        <!-- Contexto inicial se necessário -->
        <!-- <field name="context">{}</field> -->
        <field name="target">current</field> <!-- Abre na área principal -->
    </record>

     <!-- Menu Item Principal (Raiz do App) -->
     <menuitem
        id="menu_pesquisa_aiia_root"
        name="Pesquisa AIIA"
        # Ação agora é a client action
        action="action_pesquisa_aiia_search_main"
        web_icon="pesquisa_aiia,static/description/icon.png"
        sequence="10"/>

     <!-- Removemos o submenu de histórico, pois a ação principal já abre a tela -->
     <!-- <menuitem id="menu_pesquisa_aiia_search_history" ... /> -->

     <!-- Mantém o submenu para ver TODOS os leads, sem filtro -->
     <menuitem
        id="menu_pesquisa_aiia_leads_all"
        name="Todos os Leads Recebidos"
        parent="menu_pesquisa_aiia_root"
        action="pesquisa_aiia.action_pesquisa_aiia_leads"
        sequence="20"/>

</odoo>