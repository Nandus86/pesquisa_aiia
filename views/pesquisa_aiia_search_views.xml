<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View Tree para Pesquisas -->
    <record id="view_pesquisa_aiia_search_tree" model="ir.ui.view">
        <field name="name">pesquisa.aiia.search.tree</field>
        <field name="model">pesquisa_aiia.search</field>
        <field name="arch" type="xml">
            <tree string="Pesquisas AIIA" default_order="create_date desc">
                <field name="name" string="Termo Pesquisado"/>
                <field name="user_id"/>
                <field name="create_date"/>
                <field name="status"/>
                <field name="lead_count" string="Leads"/>
                <field name="next_page_token" optional="hide"/>
                 <!-- Botão para ver resultados diretamente da lista -->
                 <button name="action_view_results" type="object" string="Ver Leads" icon="fa-list"/>
                 <!-- Botão para próxima página diretamente da lista -->
                 <button name="action_search_next_page" type="object" string="Próxima Página" icon="fa-arrow-right"
                         attrs="{'invisible': [('next_page_token', '=', False)]}"/>
                         <!-- No Odoo 17, usar column_invisible -->
                         <!-- column_invisible="[('next_page_token', '=', False)]" -->
            </tree>
        </field>
    </record>

    <!-- View Form para Pesquisas -->
    <record id="view_pesquisa_aiia_search_form" model="ir.ui.view">
        <field name="name">pesquisa.aiia.search.form</field>
        <field name="model">pesquisa_aiia.search</field>
        <field name="arch" type="xml">
            <form string="Detalhes da Pesquisa AIIA">
                 <header>
                      <button name="action_search_next_page" type="object" string="Pesquisar Próxima Página" class="btn-primary"
                              invisible="[('next_page_token', '=', False)]"/>
                              <!-- Odoo 17: invisible="[('next_page_token', '=', False)]" -->
                      <field name="status" widget="statusbar" statusbar_visible="new,processing,pending_next,completed,error"/>
                 </header>
                <sheet>
                     <div class="oe_button_box" name="button_box">
                          <button name="action_view_results" type="object" class="oe_stat_button" icon="fa-list-ul">
                               <field name="lead_count" widget="statinfo" string="Leads Encontrados"/>
                          </button>
                     </div>
                     <group>
                          <group>
                               <field name="search_query" readonly="1"/>
                               <field name="user_id" readonly="1"/>
                               <field name="create_date" readonly="1"/>
                          </group>
                          <group>
                               <field name="next_page_token" readonly="1"/>
                               <field name="error_message" readonly="1" invisible="[('status', '!=', 'error')]"/>
                          </group>
                     </group>
                     <notebook>
                          <page string="Leads Encontrados">
                               <!-- Mostra a lista de leads diretamente no formulário -->
                               <field name="lead_ids" readonly="1">
                                    <tree>
                                         <field name="name"/>
                                         <field name="phone"/>
                                         <field name="email"/>
                                         <field name="create_date" optional="hide"/>
                                         <!-- Adicionar botões de ação rápida aqui se desejado -->
                                    </tree>
                               </field>
                          </page>
                     </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Ação de Janela Principal para Pesquisas -->
    <record id="action_pesquisa_aiia_search_main" model="ir.actions.act_window">
        <field name="name">Histórico de Pesquisas AIIA</field>
        <field name="res_model">pesquisa_aiia.search</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Nenhuma pesquisa foi iniciada ainda.
          </p><p>
            Clique em 'Criar' para iniciar uma nova pesquisa por empresas.
          </p>
        </field>
    </record>

     <!-- Menu Item Principal -->
     <menuitem
        id="menu_pesquisa_aiia_root"
        name="Pesquisa AIIA"
        web_icon="pesquisa_aiia,static/description/icon.png"
        sequence="10"/>

     <!-- Submenu para Histórico de Pesquisas -->
      <menuitem
        id="menu_pesquisa_aiia_search_history"
        name="Histórico de Pesquisas"
        parent="menu_pesquisa_aiia_root"
        action="action_pesquisa_aiia_search_main"
        sequence="10"/>

     <!-- Submenu para Leads (Mantém acesso a *todos* os leads) -->
     <menuitem
        id="menu_pesquisa_aiia_leads_all"
        name="Todos os Leads Recebidos"
        parent="menu_pesquisa_aiia_root"
        action="pesquisa_aiia.action_pesquisa_aiia_leads"
        sequence="20"/>

      <!-- Adicionando o botão CRIAR na tree view de pesquisas para abrir o Wizard -->
      <record id="action_pesquisa_aiia_search_main_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_pesquisa_aiia_search_tree"/>
        <field name="act_window_id" ref="action_pesquisa_aiia_search_main"/>
      </record>
       <record id="action_pesquisa_aiia_search_main_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pesquisa_aiia_search_form"/>
        <field name="act_window_id" ref="action_pesquisa_aiia_search_main"/>
      </record>
      <!-- Ação do botão Criar para abrir o wizard -->
       <record id="action_pesquisa_aiia_search_main_create" model="ir.actions.act_window">
            <field name="name">Iniciar Nova Pesquisa AIIA</field>
            <field name="res_model">pesquisa_aiia.search.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!-- Vincula esta ação ao botão "Criar" do modelo 'pesquisa_aiia.search' -->
            <field name="binding_model_id" ref="model_pesquisa_aiia_search"/>
            <field name="binding_type">action</field>
            <field name="binding_view_types">list</field> <!-- Apenas na lista -->
        </record>


</odoo>